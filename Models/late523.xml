  <!-- Animations des ailerons -->
  <animation>
    <name>AileronsGauches</name>
    <object-name>aileronG</object-name>
    <object-name>aileronG2</object-name>
  </animation>

  <animation>
    <name>AileronsDroits</name>
    <object-name>aileronD</object-name>
    <object-name>aileronD2</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>AileronsGauches</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor>15.0</factor>
    <axis>
      <x1-m>   1.264 </x1-m>
      <y1-m> -19.720 </y1-m>
      <z1-m>   1.908 </z1-m>
      <x2-m>   0.107 </x2-m>
      <y2-m>  -7.171 </y2-m>
      <z2-m>   0.785 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>AileronsDroits</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor>15.0</factor>
    <axis>
      <x1-m>  0.107 </x1-m>
